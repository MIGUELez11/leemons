{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "leemons": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb-base",
    "prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "import",
    "prettier"
  ],
  "rules": {
    "no-plusplus": "off",
    "import/no-dynamic-requires": "off",
    "import/no-extraneous-dependencies": "off",
    "react/react-in-jsx-scope": "off",
    "no-underscore-dangle": "off",
    "prettier/prettier": [
      2,
      {},
      {
        "usePrettierrc": true
      }
    ],
    "import/no-names-as-default": "off",
    "import/no-unresolved": [
      2,
      {
        "ignore": [
          "@academic-calendar-frontend-react",
          "@academic-portfolio-frontend-react",
          "@admin-frontend-react",
          "@assignables-frontend-react",
          "@attendance-control-frontend-react",
          "@board-messages-frontend-react",
          "@calendar-frontend-react",
          "@common-frontend-react",
          "@comunica-frontend-react",
          "@content-creator-frontend-react",
          "@curriculum-frontend-react",
          "@dashboard-frontend-react",
          "@dataset-frontend-react",
          "@emails-frontend-react",
          "@families-emergency-numbers-frontend-react",
          "@families-frontend-react",
          "@feedback-frontend-react",
          "@fundae-frontend-react",
          "@grades-frontend-react",
          "@layout-frontend-react",
          "@learning-paths-frontend-react",
          "@leebrary-frontend-react",
          "@menu-builder-frontend-react",
          "@mqtt-aws-iot-frontend-react",
          "@mqtt-socket-io-frontend-react",
          "@multilanguage-frontend-react",
          "@onboarding-frontend-react",
          "@scores-frontend-react",
          "@scorm-frontend-react",
          "@tasks-frontend-react",
          "@tests-frontend-react",
          "@timetable-frontend-react",
          "@users-frontend-react",
          "@widgets-frontend-react",
          "@xapi-frontend-react",
          "@bubbles-ui"
        ]
      }
    ]
  }
}
